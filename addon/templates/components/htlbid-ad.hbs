{{#if (has-block)}}
  {{yield (hash
    tag=(component "htlbid-ad/tag"
         slot=slotName
         isEager=@isEager
         isOOP=@isOOP
         sizes=@sizes
         ref=this.ref
         slotClassNames=slotClassNames
        )
    isEmpty=this.isEmpty
    width=this.width
    height=this.height
  )}}
{{else}}
  <div
    class={{concat "htl-ad " slotClassNames}}
    data-eager={{@isEager}}
    data-oop={{@isOOP}}
    data-unit={{slotName}}
    data-sizes={{@sizes}}
    data-ref={{ref}}
  ></div>
{{/if}}