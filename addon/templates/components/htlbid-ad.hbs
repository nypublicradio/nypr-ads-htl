{{#if (has-block)}}
  {{yield (hash
    tag=(component "htlbid-ad/tag"
         slot=@slot
         isEager=this.isEager
         sizes=this.sizes
         ref=this.ref
         slotClassNames=slotClassNames
        )
    isEmpty=this.isEmpty
    width=this.width
    height=this.height
  )}}
{{else}}
  <div
    class={{concat "htl-ad " slotClassNames}}
    data-eager={{isEager}}
    data-unit={{slot}}
    data-sizes={{sizes}}
    data-ref={{ref}}
  ></div>
{{/if}}